#pragma once

#define PUT_TO_FSL(address, value) \
	do{ \
		putfsl(address, 0); \
		putfsl(value, 0); \
	}while(0)

typedef struct Sprite Sprite;

struct Sprite {
    const uint32_t *image;
    const uint32_t width;
    const uint32_t height;
};

extern uint32_t background[480 * 640 / 8];

void show_sprite(const Sprite *sprite, uint32_t x, uint32_t y);
void clear_sprite(const Sprite *sprite, uint32_t x, uint32_t y);
