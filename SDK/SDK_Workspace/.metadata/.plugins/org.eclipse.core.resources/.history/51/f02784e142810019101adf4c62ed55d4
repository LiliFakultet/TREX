#include <stdlib.h>
#include "cloud.h"

Cloud clouds[MAX_CLOUD_COUNT];
int cloud_count;

static const uint32_t cloud[] = { 0x00000000 };

static Sprite cloud_sprite = { cloud, 0, 0 };

void init_clouds() {
	int i;

	for (i = 0; i < MAX_CLOUD_COUNT; i++) {
		clouds[i].active = false;
	}

	cloud_count = 0;
}

void move_clouds() {
	int i;
	for (i = 0; i < MAX_CLOUD_COUNT; i++) {
		if (!clouds[i].active) {
			continue;
		}

		if (clouds[i].x > 0) {
			--(clouds[i].x);
		}
		else {
			clouds[i].active = false;
			--cloud_count;
		}
	}
}
