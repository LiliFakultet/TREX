#pragma once

#include "xio.h"
#include "xil_io.h"
#include "fsl.h"

#define GRAPHICS_MEM_OFF 0x2000000
#define TEXT_MEM_OFF 0x1000000

#define PUT_TO_FSL(address, value) \
	do {                           \
		putfsl(address, 0);        \
		putfsl(value, 0);          \
	} while(0)


#define VGA_PERIPH_MEM_mWriteMemory(Address, Data) \
 	Xil_Out32(Address, (Xuint32)(Data))

void clear_text_screen(void);
void print_string(const char *string, int length);
void set_cursor(Xuint32 value);
